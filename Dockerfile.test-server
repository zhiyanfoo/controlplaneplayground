# Build stage
FROM golang:1.24.2 AS builder

WORKDIR /app

# Copy go mod and sum files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the unified test server
RUN CGO_ENABLED=0 GOOS=linux go build -o test-server ./test-server

# Runtime stage
FROM ubuntu:22.04

# Update and install ca-certificates
RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy binary and configs from builder stage
COPY --from=builder /app/test-server .
COPY --from=builder /app/test-server/config*.json .

# Expose all ports used by the unified server
EXPOSE 50051 50052 50053 50054

# Default command uses the config file
CMD ["./test-server", "-config", "config.json"]